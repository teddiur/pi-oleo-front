---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import cadastrado from "../images/cadastrado.svg";
import { Button } from "../components/Button/Button.jsx";
---

<Layout title="Já Cadastrado - Óleo Descarte">
  <script></script>
  <main>
    <div class="container">
      <Image src={cadastrado} width="100" height="100" alt="Bandeira" />
      <p>
        E-mail <span class="emphasis">já cadastrado.</span>
        <br />Por favor, faça login em sua conta.
      </p>
      <Button title="Acessar minha conta" path="login" client:load />
    </div>
  </main>
</Layout>
<style>
  main {
    width: fit-content;
    margin: 0 auto;
    padding: 0 1rem;
    padding-bottom: 2rem;
  }
  p {
    text-align: center;
  }
  .container {
    background-color: rgba(172, 222, 186, 0.09);
    padding: 1.5rem 3rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 0.5rem;
    margin-top: 1rem;
    max-width: 22rem;
  }
  .emphasis {
    color: #1dbc4a;
    font-weight: 700;
  }
</style>
