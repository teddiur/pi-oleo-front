---
import Layout from "../layouts/Layout.astro";
import { Button } from "../components/Button/Button.jsx";
import { Input } from "../components/Input/Input";
---

<Layout title="Esqueci Minha Senha - Ã“leo Descarte">
  <script></script>
  <main>
    <div class="container">
      <p>Digite o e-mail cadastrado para redefinir sua senha</p>
      <span class="input-container">
        <Input
          label="E-mail"
          id="email"
          type="email"
          placeholder="usuario@gmail.com.br"
          name="email"
          inputStyle={{ marginBottom: "0.5rem" }}
        />
      </span>
      <Button title="Redefinir Senha" path="login" client:load />
