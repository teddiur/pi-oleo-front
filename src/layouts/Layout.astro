---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { HamburguerMenu } from "../components/HamburguerMenu/HamburguerMenu";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <header id="title">
      <h1>Óleo Descarte</h1>

      <HamburguerMenu client:load />
    </header>
    <slot />
    <footer>
      <h3 class="footer-title">Óleo Descarte</h3>
      <nav>
        <ul class="footer-list">
          <li><a class="footer-link" href="/contato">Contato</a></li>
          <li>
            <a class="footer-link" href="/perguntas-frequentes"
              >Perguntas Frequentes</a
            >
          </li>
          <li>
            <a class="footer-link" href="/onde-descartar">Onde descartar?</a>
          </li>
        </ul>
      </nav>
      <p class="footer-text">
        © Óleo Descarte 2023. Todos os direitos reservados.
      </p>
    </footer>
  </body>
</html>
<style>
  @charset "UTF-8";
  :root {
  }
  * {
    box-sizing: border-box;
  }
  .footer-title {
    margin: 0 10px 0 0;
  }
  .footer-title,
  .footer-list {
    font-size: 1.5rem;
  }
  .footer-list {
    display: flex;
    flex-direction: column;
  }
  .footer-link,
  .footer-text {
    margin: 0;
    font-size: 1rem;
  }
  .footer-text {
    text-align: center;
  }

  footer {
    width: 100%;
    background-color: #0a3f19;
    margin-top: auto;
    color: white;
    padding: 30px 2rem;
  }
  ul {
    padding: 0;
  }
  li {
    list-style-type: none;
  }
  a {
    color: white;
  }

  header#title {
    background-color: #128232;
    width: 100%;
    display: flex;
    flex-direction: row;
    color: white;
  }
  html {
    width: 100%;
    min-height: 100%;
  }

  body {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    font-family: poppinsregular, Arial, Helvetica, sans-serif;
    margin: 0;
  }

  header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
  }
</style>
