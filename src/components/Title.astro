---
const { variant = "primary", size = "G", style = "" } = Astro.props;
---

<h1 class=`base ${variant} ${size}` style={style}>
  <slot />
</h1>
<style>
  .base {
    margin: 0;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  .primary {
    color: #1dbc4a;
  }
  .secondary {
    color: #fff;
  }
  .low-hue {
    color: #515251;
  }
  .G {
    font-size: 24px;
  }
  .M {
    font-size: 18px;
  }
</style>
